# Marty Configuration - Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
# For development (SQLite):
# DATABASE_URL=sqlite+aiosqlite:///./marty.db

# For production (Railway PostgreSQL):
DATABASE_URL=postgresql+asyncpg://postgres:[USERNAME]:[PASSWORD]@[HOST]:[PORT]/[DATABASE]

# AI Integration (Required)
ANTHROPIC_API_KEY=your_claude_api_key_here

# Book Data Integration (Required)
HARDCOVER_API_TOKEN=Bearer your_hardcover_api_token_here
HARDCOVER_API_URL=https://api.hardcover.app/v1/graphql
HARDCOVER_TOKEN_EXPIRY=2026-07-11T15:42:27

# SMS Provider Configuration
SINCH_API_TOKEN=your_sinch_api_token
SINCH_SERVICE_PLAN_ID=your_service_plan_id
SINCH_FROM_NUMBER=your_virtual_phone_number
SINCH_WEBHOOK_USERNAME=your_webhook_username
SINCH_WEBHOOK_PASSWORD=your_webhook_password

# SMS Rate Limiting (Optional - defaults provided)
SMS_RATE_LIMIT=5
SMS_RATE_LIMIT_WINDOW=60
SMS_RATE_LIMIT_BURST=10
SMS_RATE_LIMIT_BURST_WINDOW=3600

# SMS Message Behavior (Optional - defaults provided)
SMS_MULTI_MESSAGE_ENABLED=true
SMS_MESSAGE_DELAY=0.5

# Phone Number Configuration (Optional)
DEFAULT_PHONE_REGION=US

# Square Payment Integration (Coming Soon)
# SQUARE_ACCESS_TOKEN=your_square_access_token
# SQUARE_APPLICATION_ID=your_square_application_id
# SQUARE_ENVIRONMENT=sandbox

# Bookstore Integration (Optional)
BOOKSTORE_API_URL=https://your-bookstore-api.com
BOOKSTORE_API_KEY=your_bookstore_api_key

# Bookshop.org Affiliate (Optional)
BOOKSHOP_AFFILIATE_ID=your_bookshop_affiliate_id

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
ENV=dev

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_APP_ID=your_discord_application_id_here

# 10DLC Compliance Messages (Optional - defaults provided)
# STOP_CONFIRMATION_MESSAGE="Dungeon Books: You have unsubscribed and will no longer receive messages. Reply HELP for help."
# HELP_RESPONSE_MESSAGE="Dungeon Books: For help, contact hello@dungeonbooks.com or reply STOP to unsubscribe. Msg&data rates may apply."
